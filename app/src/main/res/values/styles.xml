<resources>

<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
</style>

<style name="view_matchParent_matchParent">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
</style>

<style name="tv_toolbar_pageTitle" parent="view_matchParent_matchParent">
    <item name="android:layout_height">@dimen/toolbar_height</item>
    <item name="android:textSize">@dimen/toolbar_text_size</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/white</item>
</style>

    <style name="tv_toolbar_pageTitle_name">
         <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
