<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height" android:background="@color/toolbar_background">


    <ImageView
        android:id="@+id/iv_toolbar_back"
        android:layout_width ="@dimen/toolbar_height"
        android:layout_height="@dimen/toolbar_height"
        android:padding="@dimen/toolbar_image_padding"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/arrow_down"
        android:rotation="90"/>

    <TextView
        android:id="@+id/tv_toolbar_name"
        style="@style/tv_toolbar_pageTitle_name"
        android:layout_toEndOf="@+id/iv_toolbar_back"
        android:text="@string/elie_kozah"
        />


</RelativeLayout>